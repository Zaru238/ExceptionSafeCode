FROM ubuntu:18.04

WORKDIR root/project
ARG TEMP_DIR=/root/temp

ADD . $PROJECT_ROOT

RUN apt update
RUN apt install -y gnupg

# Add repo for clang 7
RUN wget -O - https://apt.llvm.org/llvm-snapshot.gpg.key | apt-key add -
RUN apt-add-repository "http://apt.llvm.org/xenial/dists/llvm-toolchain-xenial-7/main/"

RUN apt update
RUN apt install -y cmake
RUN apt install -y clang-7.0
RUN apt install -y clang-format-7.0
RUN apt install -y valgrind

RUN apt install -y python-pip python-dev build-essential
RUN pip install --upgrade pip
RUN pip install --upgrade virtualenv
RUN pip install conan
